<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/centerImageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cropImageView"
            app:layout_constraintDimensionRatio="w,1:3" tools:srcCompat="@drawable/ic_favorite"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hugeCenterImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/cropImageView"
            app:layout_constraintDimensionRatio="w,1:3" tools:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toBottomOf="@+id/fitImageView" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hugeFitImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cropImageView"
            app:layout_constraintDimensionRatio="w,1:3" tools:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toBottomOf="@+id/hugeCenterImageView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fitImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cropImageView"
            app:layout_constraintDimensionRatio="w,1:3" tools:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toBottomOf="@+id/centerImageView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cropImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/centerImageView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintDimensionRatio="w,1:3"
            tools:srcCompat="@drawable/ic_favorite"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hugeCropImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerImageView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintDimensionRatio="w,1:3"
            tools:srcCompat="@drawable/ic_favorite" app:layout_constraintTop_toBottomOf="@+id/stretchImageView"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/stretchImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerImageView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintDimensionRatio="w,1:3"
            tools:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toBottomOf="@+id/cropImageView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hugeStretchImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerImageView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintDimensionRatio="w,1:3"
            tools:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toBottomOf="@+id/hugeCropImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>